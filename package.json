{
  "name": "playwright-result-to-slack",
  "version": "1.0.0",
  "description": "Tool for capturing market screenshots and uploading them to Slack",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:all": "playwright test && npm run upload",
    "test:stock": "playwright test tests/stock.spec.ts",
    "test:bond": "playwright test tests/bond-yield.spec.ts",
    "upload": "ts-node upload-files.ts",
    "debug": "playwright test --debug",
    "clean": "rm -rf test-results/*.png",
    "report": "playwright show-report",
    "lint": "tsc --noEmit",
    "jest": "jest",
    "jest:watch": "jest --watch"
  },
  "keywords": [
    "playwright",
    "slack",
    "automation",
    "screenshots",
    "financial-data"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.32.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@slack/web-api": "^6.11.2"
  }
}
